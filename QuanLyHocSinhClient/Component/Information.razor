                <MudText Typo="Typo.h5">Nguyễn Tuấn Anh</MudText>
            </MudCardContent>
            <MudCardActions>
                <MudButton Variant="Variant.Text" Color="Color.Primary">Thay đổi ảnh</MudButton>
            </MudCardActions>
        </MudCard>
    </MudItem>
    <MudItem xs="6" sm="9">
        <MudGrid>
            <MudItem xs="6" sm="6">
                <MudText>Mã số sinh viên: 1811060024</MudText>
