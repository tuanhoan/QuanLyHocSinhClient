                    <MudSelectItem Value="@("Hà Tĩnh")" />
                    <MudSelectItem Value="@("Vinh")" />
                    <MudSelectItem Value="@("Irish Coffee")" />
                </MudSelect>
                <MudSelect T="string" Label="Xã/ Phường">
                    <MudSelectItem Value="@("Nam")" />
                    <MudSelectItem Value="@("Nữ")" />
