        <MudDivider />
        <MudGrid>
            <MudItem xs="12" sm="6">
                <MudSelect T="string" Label="Giới tính">
                    <MudSelectItem Value="@("Nam")" />
                    <MudSelectItem Value="@("Nữ")" />
